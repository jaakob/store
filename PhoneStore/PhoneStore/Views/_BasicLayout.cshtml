@using PhoneStore.BL.Auth
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Home/Ads">JVM Phone Store</a>
            </div>
            @if (ViewBag.Title == "Ads" || ViewBag.Title == "Add Result" || ViewBag.Title == "Add Phone")
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Account/LogOff"><span class="glyphicon glyphicon-log-out"></span> Выйти</a></li>                    
                </ul>
            }
            else if (ViewBag.Title == "Login")
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Account/Registration"><span class="glyphicon glyphicon-log-in"></span> Регистрация</a></li>
                </ul>
            }
        </div>
    </nav>
    <br />
    <div>
        @RenderBody()                
    </div>
</body>
</html>
