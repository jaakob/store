@model PhoneStore.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_BasicLayout.cshtml";
}

<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div>
            @using (Html.BeginForm())
            {
                <strong>@Html.ValidationSummary()</strong>
                <p>E-mail: @Html.EditorFor(e => e.Email) </p>
                <p>Пароль: @Html.PasswordFor(e => e.Password) </p>                
                <button class="btn btn-success" type="submit">Войти</button>                
            }
            <!--
            <button class="btn btn-success" onclick="location.href='@Url.Action("Registration", "Account")'">Регистрация</button>
            -->
                <br />            
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>
