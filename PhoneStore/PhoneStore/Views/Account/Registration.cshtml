@model PhoneStore.Models.User
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/_BasicLayout.cshtml";
}

<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div>
            @using (Html.BeginForm())
            {
                <strong>@Html.ValidationSummary()</strong>
                <div class="form-group">
                    <div class="col-md-8">
                        @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control", @placeholder = "Имя" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8" style="padding-top:10px">
                        @Html.TextBoxFor(e => e.LastName, new { @class = "form-control", @placeholder = "Фамилия" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8" style="padding-top:10px">
                        @Html.PasswordFor(e => e.Password, new { @class = "form-control", @placeholder = "Пароль" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8" style="padding-top:10px">
                        @Html.PasswordFor(e => e.ConfirmPassword, new { @class = "form-control", @placeholder = "Повторите пароль" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8" style="padding-top:10px">
                        @Html.TextBoxFor(e => e.Email, new { @class = "form-control", @placeholder = "E-Mail" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8" style="padding-top:10px">
                        @Html.TextBoxFor(e => e.ContactPhone, new { @class = "form-control", @placeholder = "Контактный телефон" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8" style="padding-top:10px">
                        <button class="btn btn-success" type="submit">Регистрация</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>
