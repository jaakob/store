@model PhoneStore.Models.Phone
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@{
    ViewBag.Title = "Add Phone";
    Layout = "~/Views/_BasicLayout.cshtml";
}

@using (Html.BeginForm("AddingConfirmation", "Ads", FormMethod.Post, new { enctype = "multipart/form-data" }))
{    
    <div class="col-sm-12" style="padding-left:20%">
        @Html.ValidationSummary()
        <div class="form-group">
            <div class="col-sm-8" style="padding-top:10px">
                @Html.TextBoxFor(e => e.Brand, new { @class = "form-control", @placeholder = "Производитель" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8" style="padding-top:10px">
                @Html.TextBoxFor(e => e.Model, new { @class = "form-control", @placeholder = "Модель" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8" style="padding-top:10px">
                @Html.TextBoxFor(e => e.Price, new { @class = "form-control", @placeholder = "Цена" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8" style="padding-top:10px">
                @Html.TextAreaFor(e => e.Description, new { @class = "form-control", @placeholder = "Описание" })
            </div>
        </div> 
        <div class="col-sm-8" style="padding-top:10px">
            <p>Фото: </p>
            <input type="file" name="uploads" /><br>
            <input type="file" name="uploads" /><br>
            <input type="file" name="uploads" /><br>
            <input type="file" name="uploads" /><br>
            <input type="file" name="uploads" /><br>
            <button class="btn btn-primary" style="padding-top:10px" type="submit">Сохранить</button>
        </div>
        </div>
}


